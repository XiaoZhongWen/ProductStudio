// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["studentNo", "nickName", "registerDate", "status", "pwd"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"studentNo": {
			"bsonType": "string",
			"description": "学号"
		},
		"nickName": {
			"bsonType": "string",
			"description": "用户昵称",
			"trim": "both",
			"maxLength": 30
		},
		"avatarId": {
			"bsonType": "string",
			"description": "用户头像图片的 云存储id",
			"trim": "both",
			"maxLength": 100
		},
		"mobile": {
			"bsonType": "string",
			"description": "手机号码",
			"pattern": "^\\+?[0-9-]{3,20}$",
			"trim": "both"
		},
		"registerDate": {
			"bsonType": "timestamp",
			"description": "用户注册时间"
		},
		"lastLoginDate": {
			"bsonType": "timestamp",
			"description": "最后登录时间"
		},
		"signature": {
			"bsonType": "string",
			"description": "标签",
			"maxLength": 30
		},
		"associateIds": {
			"bsonType": "array",
			"description": "关联的id集合",
			"maxLength": 5
		},
		"status": {
			"bsonType": "int",
			"description": "学生状态：0 在读 1 结课 2 退费",
			"defaultValue": 0
		},
		"pwd": {
			"bsonType": "string",
			"description": "密码"
		}
	}
}