// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["orgId","teacherId", "studentId", "courseId", "total", "consume", "info"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"orgId": {
			"bsonType": "string",
			"description": "机构id",
			"foreignKey": "wk-orgs._id"
		},
		"teacherId": {
			"bsonType": "string",
			"description": "老师id",
			"foreignKey": "wk-users._id"
		},
		"studentId": {
			"bsonType": "string",
			"description": "学生id",
			"foreignKey": "wk-users._id"
		},
		"courseId": {
			"bsonType": "string",
			"description": "课程id",
			"foreignKey": "wk-courses._id"
		},
		"total": {
			"bsonType": "int",
			"description": "学生购买课程总数",
			"defaultValue": 0
		},
		"consume": {
			"bsonType": "int",
			"description": "学生已耗课时数",
			"defaultValue": 0
		},
		"info": {
			"bsonType": "object",
			"description": "课程操作信息"
		}
	}
}