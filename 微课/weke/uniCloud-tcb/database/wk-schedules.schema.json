// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["orgId", "teacherId", "date", "startTime", "endTime", "repeatType", "courseId", "count", "status"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"orgId": {
			"bsonType": "string",
			"description": "机构id",
			"foreignKey": "wk-orgs._id"
		},
		"teacherId": {
			"bsonType": "string",
			"description": "老师id",
			"foreignKey": "wk-users._id"
		},
		"studentId": {
			"bsonType": "string",
			"description": "学生id",
			"foreignKey": "wk-users._id"
		},
		"date": {
			"bsonType": "timestamp",
			"description": "排课操作时间"
		},
		"startTime": {
			"bsonType": "timestamp",
			"description": "排课的开始时间 hh:mm"
		},
		"endTime": {
			"bsonType": "timestamp",
			"description": "排课的结束时间 hh:mm"
		},
		"courseId": {
			"bsonType": "string",
			"description": "课程id",
			"foreignKey": "wk-courses._id"
		},
		"classId": {
			"bsonType": "string",
			"description": "班级id",
			"foreignKey": "wk-classes._id"
		},
		"presentIds": {
			"bsonType": "array",
			"description": "班级上课的学生id集合",
			"foreignKey": "wk-users._id"
		},
		"courseContent": {
			"bsonType": "string",
			"description": "上课内容",
			"maxLength": 1000
		},
		"previewContent": {
			"bsonType": "string",
			"description": "预习内容",
			"maxLength": 1000
		},
		"feedback": {
			"bsonType": "string",
			"description": "课程反馈",
			"maxLength": 1000
		},
		"assignment": {
			"bsonType": "string",
			"description": "作业",
			"maxLength": 1000
		},
		"consume": {
			"bsonType": "int",
			"description": "消耗课时数"
		},
		"status": {
			"bsonType": "int",
			"description": "0:排课, 1:消课, 2:撤销, 3:编辑"
		},
		"gradients": {
			"bsonType": "array",
			"description": "颜色标签",
			"defaultValue": ["#4e54c8", "#8f94fb"]
		},
		"remind": {
			"bsonType": "bool",
			"description": "true 提醒，false 不提醒; 课前半小时及15分钟各提醒一次"
		},
		"modifyDate": {
			"bsonType": "timestamp",
			"description": "变更时间戳"
		},
		"operatorId": {
			"bsonType": "string",
			"description": "操作人id"
		}
	}
}