// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["teacherId", "date", "startTime", "endTime", "repeatType", "courseId"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"teacherId": {
			"bsonType": "string",
			"description": "老师id",
			"foreignKey": "wk-users._id"
		},
		"studentId": {
			"bsonType": "string",
			"description": "学生id",
			"foreignKey": "wk-users._id"
		},
		"date": {
			"bsonType": "timestamp",
			"description": "排课操作时间"
		},
		"startTime": {
			"bsonType": "timestamp",
			"description": "排课的开始时间"
		},
		"endTime": {
			"bsonType": "timestamp",
			"description": "排课的结束时间"
		},
		"repeatType": {
			"bsonType": "int",
			"description": "重复类型, 0 不重发 1 每天 2 每个工作日 3 每个周末 4 每周"
		},
		"courseId": {
			"bsonType": "string",
			"description": "课程id",
			"foreignKey": "wk-courses._id"
		},
		"classId": {
			"bsonType": "string",
			"description": "班级id",
			"foreignKey": "wk-classes._id"
		},
		"studentIds": {
			"bsonType": "array",
			"description": "班级上课的学生id集合",
			"foreignKey": "wk-users._id"
		},
		"courseContent": {
			"bsonType": "string",
			"description": "上课内容",
			"maxLength": 1000
		},
		"previewContent": {
			"bsonType": "string",
			"description": "预习内容",
			"maxLength": 1000
		},
		"color": {
			"bsonType": "string",
			"description": "颜色标签"
		},
		"remind": {
			"bsonType": "bool",
			"description": "true 提醒，false 不提醒; 课前半小时及15分钟各提醒一次"
		}
	}
}