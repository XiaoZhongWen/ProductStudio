// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["name", "createTime", "gradient", "creatorId"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "机构名称",
			"maxLength": 30
		},
		"tel": {
			"bsonType": "string",
			"description": "电话号码"
		},
		"addr": {
			"bsonType": "string",
			"description": "机构地址",
			"maxLength": 100
		},
		"desc": {
			"bsonType": "string",
			"description": "机构简介",
			"maxLength": 1000
		},
		"logoId": {
			"bsonType": "string",
			"description": "机构图标云存储id",
			"maxLength": 100
		},
		"createDate": {
			"bsonType": "string",
			"description": "机构创建日期"
		},
		"gradient": {
			"bsonType": "array",
			"description": "颜色渐变"
		},
		"creatorId": {
			"bsonType": "string",
			"description": "机构的创建者id",
			"foreignKey": "wk-users._id"
		},
		"teacherIds": {
			"bsonType": "array",
			"description": "机构老师的id集合"
		},
		"studentIds": {
			"bsonType": "array",
			"description": "机构学员的id集合"
		},
		"courseIds": {
			"bsonType": "array",
			"description": "机构课程的id集合"
		},
		"classIds": {
			"bsonType": "array",
			"description": "机构班级的id集合"
		}
	}
}