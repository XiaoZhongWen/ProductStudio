// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["nickName", "registerDate", "expireDate"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"nickName": {
			"bsonType": "string",
			"description": "用户昵称",
			"trim": "both",
			"maxLength": 30
		},
		"avatarId": {
			"bsonType": "string",
			"description": "用户头像图片的 云存储id",
			"trim": "both",
			"maxLength": 100
		},
		"roles": {
			"bsonType": "array",
			"description": "角色：1 机构负责人 2 老师 3 家长 4 学生",
			"enum": [1, 2, 3]
		},
		"registerDate": {
			"bsonType": "timestamp",
			"description": "用户注册时间"
		},
		"lastLoginDate": {
			"bsonType": "timestamp",
			"description": "最后登录时间"
		},
		"mobile": {
			"bsonType": "string",
			"description": "手机号码",
			"pattern": "^\\+?[0-9-]{3,20}$",
			"trim": "both"
		},
		"expireDate": {
			"bsonType": "timestamp",
			"description": "机构会员账号过期时间"
		},
		"signature": {
			"bsonType": "string",
			"description": "标签",
			"maxLength": 30
		}
	}
}