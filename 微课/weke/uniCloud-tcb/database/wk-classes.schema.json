// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["name"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "班级名称",
			"maxLength": 50
		},
		"desc": {
			"bsonType": "string",
			"description": "班级简介",
			"maxLength": 100
		},
		"icon": {
			"bsonType": "string",
			"description": "班级字体图标",
			"maxLength": 50,
			"defaultValue": ".t-icon .t-icon-shetuan"
		}
	}
}