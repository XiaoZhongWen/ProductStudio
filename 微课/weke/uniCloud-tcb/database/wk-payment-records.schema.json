// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["studentId", "date", "courseId", "hour", "price"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"orgId": {
			"bsonType": "string",
			"description": "机构id",
			"foreignKey": "wk-orgs._id"
		},
		"studentId": {
			"bsonType": "string",
			"description": "学生id",
			"foreignKey": "wk-users._id"
		},
		"date": {
			"bsonType": "timestamp",
			"description": "缴费时间"
		},
		"courseId": {
			"bsonType": "string",
			"description": "课程id",
			"foreignKey": "wk-courses._id"
		},
		"count": {
			"bsonType": "int",
			"description": "课时数"
		},
		"price": {
			"bsonType": "double",
			"description": "缴费金额"
		},
		"remark": {
			"bsonType": "string",
			"description": "备注",
			"defaultValue": ""
		}
	}
}