// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["name", "type", "duration"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "课程名称",
			"maxLength": 50
		},
		"desc": {
			"bsonType": "string",
			"description": "课程简介",
			"maxLength": 1000
		},
		"icon": {
			"bsonType": "string",
			"description": "课程字体图标",
			"maxLength": 50
		},
		"orgId": {
			"bsonType": "string",
			"description": "课程所属机构id",
			"foreignKey": "wk-orgs._id"
		},
		"teacherId": {
			"bsonType": "string",
			"description": "课程所属老师id",
			"foreignKey": "wk-users._id"
		},
		"type": {
			"bsonType": "int",
			"description": "课程类型, 0 一对一 1 班课",
			"enum": [0, 1]
		},
		"duration": {
			"bsonType": "int",
			"description": "课程时长, 如45分钟、60分钟"
		}
	}
}